{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Onboarding preset for use with Dareharu's repositories.",
  "extends": [
    "config:base",
    ":maintainLockFilesWeekly",
    ":rebaseStalePrs",
    ":semanticCommits",
    ":semanticCommitScope(deps)",
    "helpers:pinGitHubActionDigests"
  ],
  "timezone": "Asia/Seoul",
  "assignees": ["Sayakie"],
  "dependencyDashboard": true,
  "automergeType": "pr",
  "prCreation": "immediate",
  "rebaseWhen": "behind-base-branch",
  "labels": ["dependencies"],
  "schedule": ["before 12pm on Sunday and Wednesday"],
  "npm": {
    "rangeStrategy": "bump",
    "platformAutomerge": true,
    "platformCommit": true,
    "packageRules": [
      {
        "description": "Automerge non-major typing updates",
        "matchPackagePatterns": ["^@types/"],
        "automerge": true,
        "major": {
          "automerge": false
        }
      },
      {
        "groupName": "EPS",
        "depTypeList": ["devDependencies"],
        "matchPackageNames": ["eslint", "prettier", "pretty-quick", "@sapphire/ts-config"],
        "matchPackagePatterns": ["^eslint-", "^@typescript-eslint/"],
        "automerge": true,
        "automergeType": "pr",
        "automergeStrategy": "squash",
        "major": {
          "automerge": false
        }
      }
    ]
  }
}
